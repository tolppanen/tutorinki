
<% if user_signed_in? %>
<h4> Logged in as <%= current_user.first_name %> </h4>

<% if current_user.teacher %>
<h5> You are a teacher </h5>
<% end %>


<h4>Revi sit채 m채rk채채: <%= current_user.email %> </h4>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to "Sign in", new_user_session_path, :method => :get %>
<% end %>

<% if !user_signed_in? %>

<div id="login_panel">

	<h5 class="mdl-layout__header-row login_title">Log in</h5>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="field, mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.email_field :email, autofocus: true, :class => 'mdl-textfield__input', :id => 'login_email', autocomplete: "off" %>
		<%= f.label :email, :class => 'mdl-textfield__label', :for => 'login_email' %>
	</div>
	<br>
	<div class="field, mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.password_field :password, :class => 'mdl-textfield__input', :id => 'login_password', autocomplete: "off" %>
		<%= f.label :password, :class => 'mdl-textfield__label', :for => 'login_password' %>
	</div>

	<% if devise_mapping.rememberable? -%>
	<div class="field">
		<%= f.check_box :remember_me, :class => 'mdl-checkbox__input' %>
		<%= f.label :remember_me %>
	</div>
	<% end -%>

	<div class="actions">
		<%= f.submit "Log in", :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
	</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>

<% end %>