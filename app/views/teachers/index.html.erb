


<div id="search">
<div class="container">

<h1 class="center" style="margin-top:1em;">Hae tutoreita</h1>
<div class="divider" style="margin-bottom: 30px;"></div>


  <div class="row">

  <div class="col l12 m12 s12">
    <div>
      <%= form_tag(teachers_path, :method => "get", id: "search-form") do %>
      <div id="prefetch">
        <%= text_field_tag :subject_query, @subject, class: "typeahead edit-text-field", value: @subject%>
        <%= select_tag :detail_query, options_for_select(@details.collect { |u| [u.detail] }.insert(0, "Opetuksen taso")), class: "selectbox edit-text-field"%>
      </div>
      <%= submit_tag "Hae", :class => 'edit-button', style: "margin-top:10px;" %>
      <% end %>
    </div>
  </div>

  <div class="col l12 m12 s12">
    <h4 class="search-result-header">Hakutulokset</h4>

    <ul class="collection search-result-list">
      <% @results.each do |teacher|%>
      <%= link_to teacher_path(teacher.id) do %>
      <li class="collection-item avatar search-item">
        <i><%= image_tag(teacher.avatar.url(:thumb), :class => 'circle') %></i>
        <span class="title"><%= teacher.first_name %> <%= teacher.last_name %></span>
        <p><%= teacher.city %><br>
          <%= truncate teacher.bio, length: 80 %>...
        </p>
        <i class="secondary-content"><i class="material-icons">thumb_up</i><%= teacher.total_likes %></i>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>

  </div>
</div>
</div>
