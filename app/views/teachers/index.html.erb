


<div id="search">

  <div style ="margin-left: 400px">
    <%= form_tag(teachers_path, :method => "get", id: "search-form") do %>
    <div id="prefetch">
      <%= text_field_tag :subject_query, @subject, class: "typeahead", value: @subject%>
      <%= select_tag :detail_query, options_for_select(@details.collect { |u| [u.detail] }.insert(0, "Opetuksen taso")), class: "selectbox"%>
    </div>
    <%= submit_tag "Hae", :class => 'waves-effect waves-light btn' %>
    <% end %>
  </div>

  <h4 class="search-result-header">Tutorit haulla </h4>




  <ul class="collection search-result-list">
    <% @results.each do |teacher|%>
    <%= link_to teacher_path(teacher.id) do %>
    <li class="collection-item avatar search-item">
      <i><%= image_tag(teacher.avatar.url(:thumb), :class => 'circle') %></i>
      <span class="title"><%= teacher.first_name %> <%= teacher.last_name %></span>
      <p><%= teacher.city %><br>
        <%= truncate teacher.bio, length: 80 %>...
      </p>
      <i class="secondary-content"><i class="material-icons">thumb_up</i><%= teacher.total_likes %></i>
    </li>
    <% end %>
    <% end %>


  </ul>
</div>
