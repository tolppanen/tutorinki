

<div>
  <% @skills.each do |skill| %>
    <div class="center">
      <div class="divider"></div>
      <div class="section">
              <h5><%= skill.subject.name %> <%= skill.subject.detail %></h5>
              <%= link_to("Poista", skill_path(skill), :method => "delete") %>
            </div>
          </div>
  <% end %>
</div>


<div class="profile-edit-view"><%= form_for(:user, controller: "teacher", action: "save", method: "post" ) do |f| %>
  <%= devise_error_messages! %>

  <div class="add-avatar">
    <div class="field">
      <%= f.label :avatar  %>
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="field">
    <%= f.label :bio%><br />
    <%= f.text_field :bio, autocomplete: "off", :value => @teacher.bio %>
  </div>


  <div class="field">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>


  <div class="actions">
    <%= f.submit "Päivitä tiedot", :class => 'waves-effect waves-light btn'%>
  </div>


</div>


<% end %>
